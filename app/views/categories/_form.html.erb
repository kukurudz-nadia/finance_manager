    <div class="shadow-lg p-2 mb-5 bg-white rounded text-dark">
      <h5 class="card-title", style = "text-shadow: 1px 2px #D3D3D3;"><%= form.label :description, style: "display: block" %></h5>
      <%= form.text_field :description, class:"card-text form-control input-lg border border-info border-3" %>
    </div>
    <div class = "shadow-lg p-3 mt-3 bg-white rounded text-center">
      <%= form.submit %>
    </div>
  </div>
  <% end %>
</form>
